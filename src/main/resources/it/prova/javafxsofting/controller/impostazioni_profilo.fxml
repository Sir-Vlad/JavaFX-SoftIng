<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootProfilo" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
            prefWidth="900.0" xmlns="http://javafx.com/javafx/21"
            fx:controller="it.prova.javafxsofting.controller.ImpostazioniProfilo">
    <children>
        <VBox prefHeight="800.0" prefWidth="900.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0"
                              text="Impostazioni del profilo">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                            <font>
                                <Font size="25.0"/>
                            </font>
                        </Text>
                    </children>
                </HBox>
                <HBox VBox.vgrow="ALWAYS">
                    <children>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Nome Completo">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="nomeCompletoText" text="null" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="15.0"/>
                                    </font>
                                </Label>
                                <Hyperlink onAction="#modificaNome" text="Modifica">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Hyperlink>
                            </children>
                            <HBox.margin>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </HBox.margin>
                        </VBox>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Indirizzo">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="indirizzoText" text="null" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="15.0"/>
                                    </font>
                                </Label>
                                <Hyperlink onAction="#modificaIndirizzo" text="Modifica">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Hyperlink>
                            </children>
                            <HBox.margin>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </HBox.margin>
                        </VBox>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Numero Telefono">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="numTelefonoText" text="null" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="15.0"/>
                                    </font>
                                </Label>
                                <Hyperlink onAction="#modificaNumTelefono" text="Modifica">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Hyperlink>
                            </children>
                            <HBox.margin>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </HBox.margin>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="BOTTOM_LEFT">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sicurezza">
                            <font>
                                <Font size="25.0"/>
                            </font>
                            <HBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </HBox.margin>
                        </Text>
                    </children>
                </HBox>
                <HBox VBox.vgrow="ALWAYS">
                    <children>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Email">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="emailText" text="null" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="15.0"/>
                                    </font>
                                </Label>
                                <Hyperlink onAction="#modificaEmail" text="Modifica">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Hyperlink>
                            </children>
                            <HBox.margin>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </HBox.margin>
                        </VBox>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Password">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="passwordText" text="null" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="15.0"/>
                                    </font>
                                </Label>
                                <Hyperlink onAction="#modificaPassword" text="Modifica">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Hyperlink>
                            </children>
                            <HBox.margin>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </HBox.margin>
                        </VBox>
                        <Pane HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </HBox.margin>
                        </Pane>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="200.0">
                    <children>
                        <Hyperlink onAction="#cancellaAccount" text="Cancella account">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </Hyperlink>
                    </children>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXCheckbox?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane fx:id="root" prefHeight="800.0" prefWidth="1200.0" stylesheets="@../css/login.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.prova.javafxsofting.controller.LoginController">
    <children>
        <HBox prefHeight="800.0" prefWidth="1200.0">
            <children>
                <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                <VBox prefWidth="400.0">
                    <children>
                        <Pane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
                        <VBox fx:id="wrapperLogin" alignment="TOP_CENTER" prefHeight="500.0"
                              styleClass="wrapperForm">
                            <children>
                                <Text fill="#0d3bb1" fontSmoothingType="LCD" stroke="#748b9f"
                                      strokeType="OUTSIDE" styleClass="text-blue" text="Login"
                                      textAlignment="CENTER">
                                    <font>
                                        <Font name="RACE1 Brannt Chiseled NCV" size="50.0"/>
                                    </font>
                                    <effect>
                                        <Glow level="0.62"/>
                                    </effect>
                                </Text>
                                <VBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label fx:id="emailLabel" styleClass="text-blue"
                                               text="Email">
                                            <font>
                                                <Font name="RACE1 Brannt Chiseled NCV" size="25.0"/>
                                            </font>
                                            <VBox.margin>
                                                <Insets/>
                                            </VBox.margin>
                                        </Label>
                                        <MFXTextField fx:id="emailField" alignment="CENTER"
                                                      borderGap="0.0" floatMode="BORDER"
                                                      maxWidth="1.7976931348623157E308"
                                                      promptText="Inserisci la username"
                                                      VBox.vgrow="ALWAYS">
                                            <VBox.margin>
                                                <Insets/>
                                            </VBox.margin>
                                        </MFXTextField>
                                        <HBox alignment="CENTER">
                                            <children>
                                                <Label fx:id="validateEmail" alignment="CENTER"
                                                       textFill="RED">
                                                    <font>
                                                        <Font name="FiraCode Nerd Font Reg"
                                                              size="13.0"/>
                                                    </font>
                                                </Label>
                                            </children>
                                        </HBox>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </VBox>
                                <VBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label fx:id="passwordLabel" styleClass="text-blue"
                                               text="Password">
                                            <font>
                                                <Font name="RACE1 Brannt Chiseled NCV" size="25.0"/>
                                            </font>
                                            <VBox.margin>
                                                <Insets/>
                                            </VBox.margin>
                                        </Label>
                                        <MFXPasswordField fx:id="passwordField" alignment="CENTER"
                                                          floatMode="BORDER"
                                                          maxWidth="1.7976931348623157E308"
                                                          promptText="Inserisci la password">
                                            <VBox.margin>
                                                <Insets/>
                                            </VBox.margin>
                                        </MFXPasswordField>
                                        <HBox alignment="CENTER">
                                            <children>
                                                <Label fx:id="validatePassword" alignment="CENTER"
                                                       textFill="RED">
                                                    <font>
                                                        <Font name="FiraCode Nerd Font Reg"
                                                              size="13.0"/>
                                                    </font>
                                                </Label>
                                            </children>
                                        </HBox>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </VBox>
                                <HBox alignment="TOP_CENTER" prefHeight="80.0">
                                    <children>
                                        <MFXCheckbox fx:id="rememberMe" text="Remember me"
                                                     viewOrder="1.0">
                                            <font>
                                                <Font name="RACE1 Brannt Chiseled NCV" size="15.0"/>
                                            </font>
                                        </MFXCheckbox>
                                        <Pane HBox.hgrow="ALWAYS"/>
                                        <Label fx:id="forgotPasswordLabel"
                                               onMouseClicked="#forgotPassword"
                                               styleClass="text-field" text="Forgot Password"
                                               textAlignment="RIGHT">
                                            <font>
                                                <Font name="RACE1 Brannt Chiseled NCV" size="15.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </HBox>
                                <HBox fx:id="wrapperLogInBtn" alignment="CENTER"
                                      maxHeight="1.7976931348623157E308"
                                      maxWidth="1.7976931348623157E308">
                                    <children>
                                        <MFXButton fx:id="logInBtn" buttonType="RAISED"
                                                   computeRadiusMultiplier="false"
                                                   maxWidth="1.7976931348623157E308"
                                                   onAction="#logIn" rippleAnimateShadow="true"
                                                   rippleRadius="50.0" rippleRadiusMultiplier="6.0"
                                                   text="Log In" textAlignment="CENTER"
                                                   HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="RACE1 Brannt Chiseled NCV" size="20.0"/>
                                            </font>
                                        </MFXButton>
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </VBox.margin>
                                </HBox>
                                <HBox alignment="CENTER">
                                    <children>
                                        <Text fx:id="textRegister" strokeType="OUTSIDE"
                                              strokeWidth="0.0" styleClass="text-field"
                                              text="Don't have a account" textAlignment="CENTER"
                                              HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="RACE1 Brannt Chiseled NCV" size="15.0"/>
                                            </font>
                                            <HBox.margin>
                                                <Insets right="10.0"/>
                                            </HBox.margin>
                                        </Text>
                                        <Text fx:id="register" onMouseClicked="#switchRegister"
                                              strokeType="OUTSIDE" strokeWidth="0.0"
                                              styleClass="text-field" text="Register">
                                            <font>
                                                <Font name="RACE1 Brannt Chiseled NCV" size="15.0"/>
                                            </font>
                                            <HBox.margin>
                                                <Insets left="10.0"/>
                                            </HBox.margin>
                                        </Text>
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </VBox.margin>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </HBox>

                            </children>
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </padding>
                        </VBox>
                        <Pane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
                    </children>
                </VBox>
                <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                    <effect>
                        <DropShadow height="106.99" radius="44.099999999999994" spread="0.19"
                                    width="71.41"/>
                    </effect>
                </Pane>
            </children>
        </HBox>

    </children>
</AnchorPane>
